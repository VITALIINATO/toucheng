        <!-- Секция звука -->
        <div class="sound">
            <button class="listen-button" onclick="playSound(sounds[currentIndex].soundFile)" id="listenButton"></button>
        </div>
    
        <!-- Примеры с изображениями -->
        <div class="examples-container">            
                <img class="example-image" id="image1" src="" alt="Изображение 1" onclick="playExampleSound(sounds[currentIndex].example1)">
                <img class="example-image" id="image2" src="" alt="Изображение 2" onclick="playExampleSound(sounds[currentIndex].example2)">
                <img class="example-image" id="image3" src="" alt="Изображение 3" onclick="playExampleSound(sounds[currentIndex].example3)">
        </div>  
       
    
        <!-- Кнопки для навигации -->
        <div class="nav-buttons">
            <button onclick="prevSound()">Назад</button>
            <a href="index.html">home</a> 
            <button onclick="nextSound()">Вперед</button>
        </div>
    
        <!-- Новая навигация -->
        <div class="full-nav">
            <!-- Кнопки будут генерироваться автоматически -->
        </div>
    
    </div>
    
    <!-- Аудиоплеер -->
    <audio id="audioPlayer"></audio>
    
    
        <script>
            let voicesLoaded = false;
    
            function initializeVoices() {
                const voices = speechSynthesis.getVoices();
                if (voices.length > 0) {
                    voicesLoaded = true;
                }
            }
    
            if (speechSynthesis.onvoiceschanged !== undefined) {
                speechSynthesis.onvoiceschanged = initializeVoices;
            } else {
                initializeVoices();
            }
            speechSynthesis.getVoices();
    
    const sounds = [
    
        

                // Hh
                 {
                    soundFile: "h.mp3", 
                    phonetic: "<span class='phonetic-bold'>[h]</span><br><br>близок русскому звуку [х], но почти беззвучен, как легкий выдох[а]",
                    example1: "hand", transcription1: "[hænd]", translation1: "рука ", image1: "hand.jpg",
                    example2: "home", transcription2: "[houm]", translation2: "дом", image2: "home.jpg",
                    example3: "hat", transcription3: "[hæt]", translation3: "шапка", image3: "hat.jpg",
                },
  // Ww
  {
                    soundFile: "w.mp3", 
                    phonetic: "<span class='phonetic-bold'>[w]</span><br><br>губы округлены и слегка вытянуты вперед, как перед произнесением русского [у], а затем быстро и энергично произносится следующий гласный звук в слове после [w]",
                    example1: "we", transcription1: "[wi:]", translation1: "мы ", image1: "we.jpg",
                    example2: "way", transcription2: "[wæɪ]", translation2: "путь", image2: "way.jpg",
                    example3: "wine", transcription3: "[waɪn]", translation3: "вино", image3: "wine.jpg",
                },
                 // Rr
                 {
                    soundFile: "r.mp3", 
                    phonetic: "<span class='phonetic-bold'>[r]</span><br><br>отличается от русского звука [р] тем, что лишен вибрации, а кончик языка заострен, поднят к нёбу, не касается его и остается неподвижным]",
                    example1: "red", transcription1: "[red]", translation1: "красный ", image1: "red.jpg",
                    example2: "rose", transcription2: "[rouz]", translation2: "роза", image2: "rose.jpg",
                    example3: "rabbit", transcription3: "[ræbɪt]", translation3: "кролик", image3: "rabbit.jpg",
                },

                // //Jj
                // {
                //     soundFile: "dj.mp3", 
                //     phonetic: "<span class='phonetic-bold'>[dʒ]</span><br><br>русский звук [дж]]",
                  
                // },
                










    
                
             
            ];
    
            let currentIndex = 0;
    
            function playSound(file) {
                const audio = document.getElementById("audioPlayer");
                audio.src = file;
                audio.play().catch(error => console.error("Ошибка воспроизведения:", error));
            }
    
            function playExampleSound(word) {
                const audio = new Audio(`${word}.mp3`);
                audio.play().catch(error => console.error("Ошибка воспроизведения:", error));
            }
    
            function prevSound() {
                if (currentIndex > 0) {
                    currentIndex--;
                    updateContent();
                }
            }
    
            function nextSound() {
                if (currentIndex < sounds.length - 1) {
                    currentIndex++;
                    updateContent();
                }
            }
    
            function updateActiveNav() {
                const navItems = document.querySelectorAll('.nav-item');
                navItems.forEach((item, index) => {
                    if (index === currentIndex) {
                        item.classList.add('active');
                    } else {
                        item.classList.remove('active');
                    }
                });
            }
    
            function createFullNavigation() {
                const navContainer = document.querySelector('.full-nav');
                if (!navContainer) {
                    console.error("Контейнер .full-nav не найден!");
                    return;
                }
    
                navContainer.innerHTML = '';
    
                sounds.forEach((sound, index) => {
                    const button = document.createElement('div');
                    button.classList.add('nav-item');
    
                    const soundSymbolMatch = sound.phonetic.match(/\[(.*?)\]/);
                    if (soundSymbolMatch) {
                        button.textContent = `[${soundSymbolMatch[1]}]`;
                    } else {
                        button.textContent = "N/A";
                    }
    
                    if (index === currentIndex) {
                        button.classList.add('active');
                    }
    
                    button.addEventListener('click', () => {
                        currentIndex = index;
                        updateContent();
                    });
    
                    navContainer.appendChild(button);
                });
            }
    
            function updateContent() {
                const listenButton = document.getElementById("listenButton");
                const image1Element = document.getElementById("image1");
                const image2Element = document.getElementById("image2");
                const image3Element = document.getElementById("image3");
              
    
               
                listenButton.innerHTML = sounds[currentIndex].phonetic;
                image1Element.src = sounds[currentIndex].image1 || 'placeholder.jpg';
                image2Element.src = sounds[currentIndex].image2 || 'placeholder.jpg';
                image3Element.src = sounds[currentIndex].image3 || 'placeholder.jpg';
    
                updateActiveNav();
            }
    
            window.onload = function () {
                updateContent();
                createFullNavigation();
            };
        </script> 
</body>
